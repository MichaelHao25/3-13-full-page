@import url(reset.css);
.header
	top 0
	left 0
	right 0
	z-index 10
	.top
		font-size 12px
		color #fff
		line-height 30px
		background #000
		.nav
			span
				padding 0 25px
			a
				padding 0 10px
	.bottom
		background #fff
		.brand
			height 70px
			font-size 0
			img
			i
				display inline-block
				vertical-align middle
			i
				width 0
				height 100%
			@media(max-width 1200px)
				width 100%
				height auto
				margin 30px 0 10px
				text-align center
				img
					display block
					margin 0 auto
		.nav
			height 70px
			a
				position relative
				float left
				margin 0 18px
				padding 0 10px
				line-height 70px
				&:after
					content ""
					position absolute
					bottom 0
					left 0
					right 0
					border-top 5px solid transparent
					transition 0.3s
				&:hover:after
					border-top-color #2087ed
			@media(max-width 1200px)
				width 100%
				text-align center
				font-size 0
				height auto
				a
					display inline-block
					font-size:12px
					line-height 40px
			
.pt-menu
	padding-top 100px
	height 100%
	box-sizing border-box
.section-page-1
	.banner
		.pc-bg
			background #182643 center center no-repeat
			width 100%
			height 100%
		.wap-bg
			background #182643
			img
				display block
				width 100%
		.container
			position relative
		.search-area
			position absolute
			background rgba(0,0,0,0.2)
			bottom 0
			left 0
			right 0
			padding 10px 0 20px
			.tips
				font-size 12px
				color #fff
				line-height 3
			.form
				display block
				input
					float left
					border none
					background none
					width calc(100% - 8em)
					height 50px
					background #fff
					font-size 18px
					box-sizing border-box
					padding-left 15px
					outline none
					border-radius 5px 0 0 5px
					&+input
						padding-left 2em
						width 6em
						background #ff7200 url('../img/header-banner5.png') 10px center no-repeat
						border-radius 0 5px 5px 0
						color #fff
						text-align left
	.fp-controlArrow
		width 30px
		height 30px
		border none
		margin-top -15px
		background url('../img/header-banner10.png') center center /24px auto no-repeat
	.fp-controlArrow.fp-next
		background-image url('../img/header-banner9.png')
